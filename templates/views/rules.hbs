<!-- Add User Modal -->
<div class="modal fade modal-center-screen" id="addRuleModal" tabindex="-1" role="dialog" data-backdrop="static" style="padding-top: 280px">
    <div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
              <h3 class='col-12 modal-title text-center'>
              Create Rule
              
              <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
              <span aria-hidden='true'>&times;</span>
              </button></h3>
        </div>
        
        <div class="modal-body">

              <form method="post" action="/api/policy/postRules">
        
                  <div class="input-group-prepend-users">
                    <div class="input-group-text-users">Name</div>
                  </div>
                  <input type="text" class="form-control input-users" id="NameRule" name="NameRule" onkeyup="emptyInput('rule')" required>
                  
                  <div class="input-group-prepend-users">
                    <div class="input-group-text-users">FIELD</div>
                  </div>
                  <input type="number"class="form-control input-users" id="ruleField" name="ruleField" size="38" onkeyup="emptyInput('rule')" required>
                  
                  <div class="input-group-prepend-users"  >
                    <div class="input-group-text-users">VALUE</div>
                  </div>
                  <input type="number" class="form-control input-users" id="ruleValue" name="ruleValue" size="38" autocomplete="off" onkeyup="emptyInput('rule')" required>         

        </div>
        </div>
        <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="submit" id="send" class="btn btn-success " disabled >ADD</button>
                </form>
        </div>
    </div>
</div>
<!-- edit rule Modal -->

    

<div class="modal fade modal-center-screen" id="editRuleModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        
            <div class="input-group-prepend-users">
              <div class="input-group-text-users">Name</div>
            </div>
            <input type="text" class="form-control input-users" id="editNameRule" name="NameRule" >
            
            <div class="input-group-prepend-users">
              <div class="input-group-text-users">FIELD</div>
            </div>
            <input type="number"class="form-control input-users" id="editruleField" name="ruleField" size="38">
            
            <div class="input-group-prepend-users"  >
              <div class="input-group-text-users">VALUE</div>
            </div>
            <input type="number" class="form-control input-users" id="editruleValue" name="ruleValue" size="38" autocomplete="off"> 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

