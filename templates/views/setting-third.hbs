<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Setting Siem</title>

  <!-- Custom fonts for this template-->
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="css/sb-admin-2.css" rel="stylesheet">

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    {{>sidebar}}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        {{>topbar}}


        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-4 text-gray-800">SMTP Setting</h1>
          <div class="card shadow mb-4">
            <div class="card-body">

              <!-- Main Form Start-->

              {{!-- SMTP Server --}}
              <form class="form-setting" id="setting-form-id">
                <div class="form-group row">
                  <label for="inputServer" class="col-sm-2 col-form-label">Server Address:</label>
                  <div class="col-sm-10-setting">
                    <input type="text" class="form-control input-setting" id="SmtpServer" placeholder="smtp.example.com">
                  </div>
                </div>

                {{!-- Server port --}}
                <div class="form-group row">
                  <label for="inputport" class="col-sm-2 col-form-label">Server port:</label>
                  <div class="col-sm-10-setting">
                    <input type="number" class="form-control input-setting-number" id="ServerPort" placeholder="SMTP port" min="0">
                  </div>
                </div>

                {{!-- SMTP Username --}}
              <form class="form-setting" id="setting-form-id">
                <div class="form-group row">
                  <label for="inputServer" class="col-sm-2 col-form-label">Username:</label>
                  <div class="col-sm-10-setting">
                    <input type="email" class="form-control input-setting" id="SmtpUser" placeholder="user@example.com">
                  </div>
                </div>

                {{!-- SMTP Password --}}
              <form class="form-setting" id="setting-form-id">
                <div class="form-group row">
                  <label for="inputServer" class="col-sm-2 col-form-label">Password:</label>
                  <div class="col-sm-10-setting">
                    <input type="password" class="form-control input-setting" id="SmtpPass" placeholder="****">
                  </div>
                </div>
                {{!-- Submit button --}}
                <div class="form-group row">
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" id="submit-setting">Submit</button>
                  </div>
                </div>
              </form>
              <!-- Main Form End-->

            </div>
          </div>
        </div>
        <!-- /.container-fluid -->


      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      {{>footer}}

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  {{>logout}}

  <!-- Bootstrap core JavaScript-->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="js/sb-admin-2.min.js"></script>

  {{!-- Load setting from js file --}}
  <script src="js/setting3rd.js"></script>

</body>

</html>
