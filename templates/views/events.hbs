      <!-- Footer -->
      {{>footer}}

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>


  {{>logout}}
  

<!-- Add User Modal -->
<div class="modal fade modal-center-screen" id="addRuleModal" tabindex="-1" role="dialog" data-backdrop="static" style="padding-top: 280px">
    <div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
              <h3 class='col-12 modal-title text-center'>
              Create Event
              
              <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
              <span aria-hidden='true'>&times;</span>
              </button></h3>
        </div>
        
        <div class="modal-body">

              <form method="post" action="/api/policy/postEvents">
        
                  <div class="input-group-prepend-users">
                    <div class="input-group-text-users">Name</div>
                  </div>
                  <input type="text" class="form-control input-users" id="eventName" name="eventName" onkeyup="emptyInput()" required>
                  
                  <div class="input-group-prepend-users">
                    <div class="input-group-text-users">Description</div>
                  </div>
                  <input type="number"class="form-control input-users" id="Description" name="Description" size="38" onkeyup="emptyInput()" autocomplete="off" required>
                  
                  <div class="input-group-prepend-users"  >
                    <div class="input-group-text-users">Type</div>
                  </div>
                  <select type="text" id="type_select" name="type_select" class="form-control input-users-dropdown" required>
                    <option value="Local" selected>Local</option>
                    <option value="Global">Global</option>
                  </select>

                  <!-- notifications-->

                 <div class="event_creation" >
                     <div class="rule_fields_for_duplication ">

                            <div class="input-group-prepend-users">
                                <div class="input-group-text-users">Rule ID</div>
                            </div>
                            <input type="number"class="form-control input-users" id="Rule ID" name="Rule ID" size="38" onkeyup="emptyInput()" autocomplete="off" required>
                  
                            <div class="input-group-prepend-users">
                                <div class="input-group-text-users">Repeated</div>
                            </div>
                            <input type="number"class="form-control input-users" id="repeated" name="repeated" size="38" onkeyup="emptyInput()" autocomplete="off" required>

                            <div class="input-group-prepend-users">
                                <div class="input-group-text-users">Timeout</div>
                            </div>
                            <input type="number"class="form-control input-users" id="TIMEOUT" name="TIMEOUT" size="38" onkeyup="emptyInput()" autocomplete="off" required>
                  </div>
               </div>

               <div><button class="btn btn-primary btn-user btn-block;input-group-text" href="#" id="addMore" style="position: absolute;right: 200px;bottom:0;">ADD RULE</button></div>
                    
        </div>

        <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="submit" id="send" class="btn btn-success " disabled >ADD</button>
                </form>
        </div>





  <!-- Bootstrap core JavaScript-->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

