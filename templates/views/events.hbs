        <!-- Topbar -->
        {{>topbar}}

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Events</h1>
        {{> messages }}
        <div class="card-body" >
        <button class="btn btn-secondary" data-toggle="modal" data-target="#addRuleModal">ADD EVENT</button>
        </div>
        <div class="container-fluid">

          <!-- Page Heading -->
          <!-- DataTales Example -->
              <div class="table-responsive" style="min-width: 980px;padding-top: 8px">
                <table class="table table-bordered eventDataTable" width="100%" cellspacing="0"style="margin-top: 20px">
                  <thead>
                    <tr>
                      <th>EVENT ID</th>                      
                      <th>EVENT NAME</th>
                      <th>DESCRIPTION</th>
